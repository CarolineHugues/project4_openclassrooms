{# src/project4OC/BookingBundle/Resources/views/Frontend/purchase.html.twig #}

{% extends "project4OCBookingBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Paiement{% endblock %}

{% block body %}

	<section class="col-md-offset-3 col-md-6 col-md-offset-3 col-xs-12">
		<h2>Récapitulatif</h2>
		<div id="summary">
			<p><strong>Date de visite :</strong> {{ booking.visitDay.date|date('d/m/Y') }}</p>
			<p><strong>Nombre de billets :</strong> {{ booking.numberOfTickets }}</p>
			<p><strong>Prix total :</strong> {{ totalPrice }},00 euros</p>
			<p><strong>Adresse e-mail à laquelle sera envoyé le mail de confirmation faisant foi de billet(s) :</strong> {{ booking.mail}}</p>
		</div>
	</section>

	<form id="payment-form" method="post" action="/Symfony/web/app_dev.php/confirmation">
		<div id="stripe-form" class="form-row col-md-offset-4 col-md-4 col-md-offset-4 col-xs-12">
		    <label for="card-element">
		      Paiement par carte
		    </label>

		    <div id="card-element">
		      <!-- A Stripe Element will be inserted here. -->
		    </div>

		    <!-- Used to display Element errors. -->
		    <div id="card-errors" role="alert"></div>
		    <div id="stripe-button">
		    	<button class="btn-default btn" name="submit-stripe">Payer {{ totalPrice }},00 euros</button>
			</div>
		</div>
	</form>
{% endblock %}