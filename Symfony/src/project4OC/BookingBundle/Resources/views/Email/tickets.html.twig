{# src/project4OC/BookingBundle/Resources/views/Email/tickets.html.twig #}

{% extends "project4OCBookingBundle::layout.html.twig" %}

{% block body %}
	<section id="mailBody" style="width:670px;margin:auto;padding: 10px 10px 10px 10px;border:5px solid #5ba4a4;">
		<p>Nous vous confirmons votre réservation de <strong>{{booking.numberOfTickets}} {% if booking.numberOfTickets > 1 %} billets {% else %} billet {% endif %}</strong> pour la visite du <strong>musée du Louvre</strong> le <strong>{{booking.visitDay.date|date('d/m/Y')}}</strong> {% if booking.ticketType == "day_ticketType" %} toute la <strong>journée</strong> {% else %} à partir de <strong>14h00</strong> {% endif %} pour :</p>
		{% for ticket in booking.tickets %}
			<div>
				<p>- {{ticket.name}} {{ticket.surname}} {% if ticket.reducedRate == 1 %} <strong>TARIF REDUIT</strong> (Ne pas oublier de venir avec sa carte justificative, il sera nécessaire de la présenter à l'entrée du musée.){% endif %}
				</p>
			</div>
		{% endfor %}
		<p><strong>Prix total : {{totalPrice}},00 euros</strong></p>
		<p>Code de réservation : {{booking.bookingCode}}</p>
	</section>
{% endblock %}